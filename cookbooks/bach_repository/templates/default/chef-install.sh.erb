#!/bin/bash
# -*- mode: shell-script -*-
#
# This script installs the universal Chef package for Ubuntu
# from a hardcoded bootstrap host.
#
# The script is generated from a Chef template, which inserts the
# bootstrap host URL.
#
set -e

DEB_FILE=`mktemp -t chef-install-XXXXX.deb`
wget -O "$DEB_FILE" "<%= @download_url %>" 2> /tmp/wget.err

if sha256sum "$DEB_FILE" | grep -q <%= @sha256sum %>; then
    dpkg -i "$DEB_FILE"
    rm "$DEB_FILE"
else
    echo 'Checksum did not match for <%= @download_url %>!'
    exit 1
fi

# Add in our Chef-Server's hostname to /etc/hosts if we can not resolve it
if ! getent hosts <%= @chef_server_fqdn %>; then
  echo "<%= "#{@chef_server_ip}\t#{@chef_server_fqdn}" %>" >> /etc/hosts
fi

# Remove rubygems and install only our gemserver
/opt/chef/embedded/bin/gem sources --add http://<%= node['bach']['repository']['gem_server'] %>/ || (echo "Failed to add local Gem repo")
/opt/chef/embedded/bin/gem sources --remove http://rubygems.org/ || true
/opt/chef/embedded/bin/gem sources --remove https://rubygems.org/ || true
/opt/chef/embedded/bin/gem sources | grep -q "^http://<%= node['bach']['repository']['gem_server'] %>/$" || (echo "Failed to add bootstrap to gem sources")
# Stomp /etc/gemrc to not proxy our local Gem server
echo 'http_proxy: :no_proxy' > /etc/gemrc

# Update chef client configuration
mkdir -p /etc/chef/client.d || (echo "Failed to create /etc/chef/client.d")
echo "rubygems_url 'http://<%= node['bach']['repository']['gem_server'] %>/'" > /etc/chef/client.d/rubygems_url.rb || (echo "Failed to write rubygems_url file in /etc/chef/client.d")
