export ZOO_LOG_DIR=/var/log/zookeeper
export ZOO_PID_DIR=/var/run/zookeeper
export ZOOPIDFILE=$ZOO_PID_DIR/zookeeper-server
export ZOOCFGDIR=/etc/zookeeper/conf
export ZOO_DATADIR_AUTOCREATE_DISABLE=1
