{
  "name": "Hadoop-Head-Namenode-NoHA",
  "json_class": "Chef::Role",
  "run_list": [
    "role[Basic]",
    "role[Hadoop-Head]",
    "recipe[hadoop::namenode_no_HA]",
    "recipe[jmxtrans_wrapper]"
  ],
  "description": "Non-HA version of Hadoop Namenode role in a Hadoop cluster",
  "chef_type": "role",
  "default_attributes" : {
    "jmxtrans":  {
      "servers":  [
                 {
                    "type": "namenode",
                    "service": "hadoop-hdfs-namenode",
                    "service_cmd": "org.apache.hadoop.hdfs.server.namenode.NameNode"
                 }
        ]
      }
  },
  "override_attributes": {
    "bcpc": {
      "hadoop": {
        "hdfs": {
          "HA": false
        }
      }
    }
  }
}
