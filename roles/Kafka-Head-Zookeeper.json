{
  "name": "Kafka-Head-Zookeeper",
  "default_attributes": {
   "jmxtrans":  {
      "servers":  [
                 {
                    "type": "zookeeper",
                    "service": "zookeeper-server",
                    "service_cmd": "org.apache.zookeeper.server.quorum.QuorumPeerMain"
                 }
        ]
      }
  },
  "json_class": "Chef::Role",
  "run_list": [
    "role[Basic]",
    "recipe[bcpc::default]",
    "recipe[bcpc::networking]",
    "recipe[hadoop::disks]",
    "recipe[kafka_wrapper::default]", 
    "recipe[kafka_wrapper::setattr]",
    "recipe[java::oracle]",
    "recipe[hadoop::hdp_repo]",
    "recipe[kafka_wrapper::zookeeper_server]",
    "recipe[bcpc::diamond]",
    "recipe[jmxtrans_wrapper]"
  ],
  "description": "Role to setup a dedicated Zookeeper for Kafka",
  "chef_type": "role",
  "override_attributes": {
  }
}

