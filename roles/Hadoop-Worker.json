{
  "name": "Hadoop-Worker",
  "json_class": "Chef::Role",
  "run_list": [
    "role[Basic]",
    "recipe[bcpc::default]",
    "recipe[hadoop::default]",
    "recipe[bcpc::networking]",
    "recipe[hadoop::disks]",
    "recipe[hadoop::hdp_repo]",
    "recipe[hadoop::configs]",
    "recipe[pam::default]",
    "recipe[hadoop::datanode]",
    "recipe[hadoop::httpfs]",
    "recipe[hadoop::region_server]",
    "recipe[hadoop::pig]",
    "recipe[hadoop::mahout]",
    "recipe[bcpc::zabbix-work]",
    "recipe[bcpc::diamond]",
    "recipe[jmxtrans_wrapper]"
  ],
  "description": "A worker node in a Hadoop cluster",
  "chef_type": "role",
  "default_attributes" : {
    "jmxtrans":  {
      "servers":  [
                 {
                    "type": "datanode",
                    "service": "hadoop-hdfs-datanode",
                    "service_cmd": "org.apache.hadoop.hdfs.server.datanode.DataNode"
                 },
                 {
                    "type": "hbase_rs",
                    "service": "hbase-regionserver",
                    "service_cmd": "org.apache.hadoop.hbase.regionserver.HRegionServer"
                 }
        ]
      }
  },
  "override_attributes": {
  }
}

